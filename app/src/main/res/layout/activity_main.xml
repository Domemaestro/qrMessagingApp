<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ocean_blue"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="80dp"
        android:src="@mipmap/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/logo_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="FriendConnect"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/logo_img"
        app:layout_constraintEnd_toEndOf="@+id/logo_img"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/logo_img"
        app:layout_constraintTop_toTopOf="@+id/logo_img"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/signUp_btn"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/btn_shape"
        android:text="Sign-Up"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/logo_title_tv"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/logo_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/logo_img" />

    <Button
        android:id="@+id/signIn_btn"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_signin_shape"
        android:text="Sign-In"
        android:textStyle="bold"
        android:textColor="@color/ocean_blue"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/signUp_btn"
        app:layout_constraintTop_toBottomOf="@+id/signUp_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>
